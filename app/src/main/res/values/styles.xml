<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="colorAccent">@color/theme</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black_255</item>
        <item name="android:windowBackground">@color/white_255</item>
        <item name="android:itemBackground">@color/wechat_color</item>
        <!-- 取消启动APP时的白屏 -->
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
