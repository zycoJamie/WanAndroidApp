<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/normal_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_project"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_48"
            android:background="@mipmap/bg_blue_gradient"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tl_divider_color="@color/theme"
            app:tl_divider_padding="@dimen/dp_10"
            app:tl_divider_width="@dimen/dp_1"
            app:tl_indicator_color="@color/white"
            app:tl_indicator_corner_radius="@dimen/dp_5"
            app:tl_indicator_margin_left="@dimen/dp_5"
            app:tl_indicator_margin_right="@dimen/dp_5"
            app:tl_indicator_style="BLOCK"
            app:tl_textSelectColor="@color/black_255"
            app:tl_textUnselectColor="@color/black_30" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_project"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_project" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>